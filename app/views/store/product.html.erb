<% provide(:title, @product.name ) %>

<!-- start main -->
<div class="main_bg">
  <div class="wrap">  
    <div class="main">
  <!-- start content -->
      <div class="single">
      <!-- start span1_of_1 -->
        <div class="left_content">
          <div class="span1_of_1">
            <!-- start product_slider -->
            <%= render 'view_product' %>
            <!-- end product_slider -->
          </div>
          <!-- start span1_of_1 -->
          <div class="span1_of_1_des">
            <div class="desc1">
              <h3>Lorem Ipsum is simply dummy text </h3>
              <p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
              <h5>Rs. 399</h5>
              <div class="available">
                <h4>Available Options :</h4>
                <ul>
                  <li>Color:
                    <%= select_tag("Color", options_for_select(Product::Colors, Product::Colors[0])) %>
                  </li>
                  <li>Size:
                    <%= select_tag("Size", options_for_select(Product::Sizes, Product::Sizes[0])) %>
                  </li>
                </ul>
                <div class="btn_form">
                  <form>
                    <input type="submit" value="add to cart" title="" />
                  </form>
                </div>
                <div class="clear"></div>
              </div>
              <div class="share-desc">
                <div class="share">
                  <h4>Share Product :</h4>
                  <ul class="share_nav">
                    <li><a href="#"><%= image_tag 'facebook.png', title: 'facebook' %></a></li>
                    <li><a href="#"><%= image_tag 'twitter.png', title: 'Twiiter' %></a></li>
                    <li><a href="#"><%= image_tag 'rss.png', title: 'Rss' %></a></li>
                    <li><a href="#"><%= image_tag 'gpluse.png', title: 'Google+'%></a></li>
                    </ul>
                </div>
                <div class="clear"></div>
              </div>
            </div>
          </div>
          <div class="clear"></div>
          <!-- start tabs -->
          <%= render 'tabs_product' %>
          <!-- end tabs -->
        </div>
          <!-- start sidebar -->
        <%= render 'shared/best_sellers' %>
      </div> 
  <!-- end content -->
    </div>
  </div>
</div> 
